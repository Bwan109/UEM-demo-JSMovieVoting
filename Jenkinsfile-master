pipeline {
    agent any

    tools {
        nodejs '14.15'
    }

    stages {
        stage('Test Client') {
            steps {
                sh 'node -v'
                sh 'npm -v'
                dir('client') {
                    // sh 'npm install'
                    // sh 'npm test'
                }
            }
        }

        stage('SonarQube scan') {
            steps {
                script {
                    def scannerHome = tool 'SonarScanner';
                    withSonarQubeEnv('demo-sonarcloud') {
                        sh "ls -al ${scannerHome}/../"
                        sh "ls -al ${scannerHome}/bin"
                        sh "${scannerHome}/bin/sonar-scanner -Dsonar.organization=wickylim-vs -Dsonar.projectKey=jsmovievoting -Dsonar.sources=."
                    }
                }
            }
        }
    }
}
